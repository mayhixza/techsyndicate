<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/all.css">
  <link rel="stylesheet" href="css/signup.css">
  <title>dTour- Sign up</title>
</head>
<body>
  <nav>
    <div class="navbar">
      <img src="../assets/Logo.svg" class="logo">
      <ul>
        <li><a href="#">Home</a></li>
        <li><a href="#">About</a></li>
        <li><a href="#">Features</a></li>
        <li><a href="#">Stories</a></li>
        <li><a href="#">Contact</a></li>
      </ul>
    </div>
  </nav>
  
  <section class="form">
    <div class="signup-container"> 
      <div class="form-container">         
        <form action="/signup">
          <h2>Sign up</h2>
          <label for="buyer">Are you a buyer?</label>
          <input type="checkbox" name="buyer" /><br>
          <label for="name">Name</label><br>
          <input type="text" name="name" required /><br>
          <label for="email">Email</label><br>
          <input type="text" name="email" required /><br>
          <div class="email error"></div>
          <label for="password">Password</label><br>
          <input type="password" name="password" required />
          <div class="password error"></div>
          <button class="btn">Sign up</button>
        </form>
      </div>
      <img src="assets/loginalt.jpg" class="image">
    </div>
  </section>


  <script>
    const form = document.querySelector('form');
    const emailError = document.querySelector('.email.error');
    const passwordError = document.querySelector('.password.error');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // reset errors
      emailError.textContent = '';
      passwordError.textContent = '';

      // get values
      const name = form.name.value;
      const email = form.email.value;
      const buyer = form.buyer.checked;
      const password = form.password.value;

      try {
        const res = await fetch('/signup', { 
          method: 'POST', 
          body: JSON.stringify({ name, email, buyer, password }),
          headers: {'Content-Type': 'application/json'}
        });
        const data = await res.json();
        if (data.errors) {
          emailError.textContent = data.errors.email;
          passwordError.textContent = data.errors.password;
        }
        if (data.user) {
          location.assign('/');
        }

      }
      catch (err) {
        console.log(err);
      }

    });
  </script>
</body>
</html>